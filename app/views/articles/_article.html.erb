<div class = "container mt-4">
 <% @articles.each do |article| %>
    <div class = "row justify-content-md-center">
    <div class = "col-8">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header">
          By <%=link_to article.user.username, user_path(article.user), class:"text-info" %>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%=link_to article.title, article_path(article), class:"text-success" %></h5>
          <p class="card-text"><%= truncate(article.desc, length:100) %></p>
          <%= link_to "View", article_path(article), class: "btn btn-outline-success" %>
          <%if logged_in? && article.user == current_user%>
          <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-info" %>
          <%= link_to "Delete", article_path(article), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
          <%end%>
        </div>
        <div class="card-footer text-muted">
          <small>
            Created <%= time_ago_in_words(article.created_at)%> ago , 
            Updated <%= time_ago_in_words(article.updated_at)%> ago.
          </small>
        </div>
      </div>
    </div>
    </div>

  <% end %>
</div>